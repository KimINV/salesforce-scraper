{
  "manifest_version": 3,
  "name": "BRF Scraper (SFDC)",
  "version": "1.0.0",
  "description": "Export BRF/Brief JSON from Salesforce Lightning record detail pages. Local-only, no external services.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://*.lightning.force.com/*"],
  "content_scripts": [
    {
      "matches": ["https://*.lightning.force.com/lightning/r/*/view"],
      "js": ["content.js"],
      "css": ["ui.css"],
      "run_at": "document_idle"
    }
  ]
}

